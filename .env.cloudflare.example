# Cloudflare Pages 环境变量配置
# 在 Cloudflare Dashboard > Settings > Environment variables 中设置这些变量

# 基础配置
NODE_VERSION=20
NEXT_PUBLIC_WEB_URL=https://nano-banana.pages.dev

# 数据库配置
DATABASE_URL=你的数据库连接字符串

# 认证配置
AUTH_SECRET=你的认证密钥
NEXTAUTH_URL=https://nano-banana.pages.dev
AUTH_URL=https://nano-banana.pages.dev/api/auth
AUTH_TRUST_HOST=true

# OAuth 配置
AUTH_GOOGLE_ID=你的Google OAuth ID
AUTH_GOOGLE_SECRET=你的Google OAuth Secret
NEXT_PUBLIC_AUTH_GOOGLE_ID=你的Google OAuth ID
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED=true

AUTH_GITHUB_ID=你的GitHub OAuth ID
AUTH_GITHUB_SECRET=你的GitHub OAuth Secret
NEXT_PUBLIC_AUTH_GITHUB_ENABLED=true

# API 密钥
NANO_BANANA_API_KEY=你的nano-banana API密钥
OPENAI_API_KEY=你的OpenAI API密钥
OPENROUTER_API_KEY=你的OpenRouter API密钥

# 存储配置（使用 Cloudflare R2）
STORAGE_ENDPOINT=你的R2端点
STORAGE_ACCESS_KEY=你的R2访问密钥
STORAGE_SECRET_KEY=你的R2密钥
STORAGE_BUCKET=你的R2存储桶
STORAGE_DOMAIN=你的R2域名

# 支付配置
CREEM_ENV=test
CREEM_API_KEY=你的Creem API密钥
CREEM_WEBHOOK_SECRET=你的Webhook密钥