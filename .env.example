# =============================================================================
# Next.js 项目环境变量配置模板
# =============================================================================
# 复制此文件为 .env.local 并填入真实值
# 注意：不要将真实的 API 密钥提交到版本控制

# -----------------------------------------------------------------------------
# 基础网站信息
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL="http://localhost:3000"
NEXT_PUBLIC_PROJECT_NAME="ShipAny"
NEXT_PUBLIC_DEFAULT_THEME="system"
NEXT_PUBLIC_LOCALE_DETECTION="false"

# -----------------------------------------------------------------------------
# 数据库配置 (Supabase PostgreSQL)
# 获取地址：https://supabase.com/dashboard/projects
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://username:password@host:port/database"

# -----------------------------------------------------------------------------
# 身份认证配置 (NextAuth.js)
# 文档：https://authjs.dev/getting-started/installation
# -----------------------------------------------------------------------------
AUTH_SECRET=""  # 使用 `openssl rand -base64 32` 生成
AUTH_URL="http://localhost:3000/api/auth"
AUTH_TRUST_HOST="true"

# 是否启用认证功能（可选）
# NEXT_PUBLIC_AUTH_ENABLED="true"

# Google OAuth 配置
# 获取地址：https://console.developers.google.com/
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
NEXT_PUBLIC_AUTH_GOOGLE_ID=""
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED="true"
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED="true"

# GitHub OAuth 配置
# 获取地址：https://github.com/settings/developers
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
NEXT_PUBLIC_AUTH_GITHUB_ENABLED="true"

# -----------------------------------------------------------------------------
# 支付系统配置
# -----------------------------------------------------------------------------
PAY_PROVIDER=""  # "stripe" 或 "creem"

# Stripe 支付配置
# 获取地址：https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=""
STRIPE_PRIVATE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Creem 支付配置
# 获取地址：https://www.creem.io/dashboard/developers
CREEM_ENV=""  # "sandbox" 或 "production"
CREEM_API_KEY=""
CREEM_WEBHOOK_SECRET=""
CREEM_PRODUCTS=""

# 支付回调页面配置
NEXT_PUBLIC_PAY_SUCCESS_URL="/my-orders"
NEXT_PUBLIC_PAY_FAIL_URL="/pricing"
NEXT_PUBLIC_PAY_CANCEL_URL="/pricing"

# -----------------------------------------------------------------------------
# 云存储配置 (Cloudflare R2)
# 文档：https://developers.cloudflare.com/r2/
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT=""
STORAGE_REGION="auto"
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""
STORAGE_BUCKET=""
STORAGE_DOMAIN=""

# -----------------------------------------------------------------------------
# AI 服务提供商配置
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=""

# DeepSeek
DEEPSEEK_API_KEY=""

# OpenRouter (多模型聚合)
OPENROUTER_API_KEY=""

# SiliconFlow
SILICONFLOW_API_KEY=""

# Replicate
REPLICATE_API_TOKEN=""

# Kling AI
KLING_API_KEY=""

# Nano Banana (图像生成与编辑)
NANO_BANANA_API_KEY=""
NANO_BANANA_API_URL="https://api.kie.ai/nano-banana"

# -----------------------------------------------------------------------------
# 分析服务配置
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# OpenPanel Analytics
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=""

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""
NEXT_PUBLIC_PLAUSIBLE_SCRIPT_URL=""

# -----------------------------------------------------------------------------
# 邮件服务配置
# -----------------------------------------------------------------------------
# Resend (邮件发送)
# 获取地址：https://resend.com/api-keys
RESEND_API_KEY=""
RESEND_SENDER_EMAIL=""

# -----------------------------------------------------------------------------
# 广告配置
# -----------------------------------------------------------------------------
# Google AdSense
NEXT_PUBLIC_GOOGLE_ADCODE=""

# -----------------------------------------------------------------------------
# 管理员配置
# -----------------------------------------------------------------------------
ADMIN_EMAILS=""  # 逗号分隔的管理员邮箱列表

# -----------------------------------------------------------------------------
# Context7 集成 (文档检索)
# -----------------------------------------------------------------------------
CONTEXT7_API_KEY=""
CONTEXT7_BASE_URL="https://api.context7.com"

# -----------------------------------------------------------------------------
# 生产环境特有配置
# -----------------------------------------------------------------------------
# 用于生产环境的额外安全配置
# NODE_ENV="production"
# NEXTAUTH_URL="https://yourdomain.com"

# =============================================================================
# 重要安全提示
# =============================================================================
# 1. 永远不要将包含真实 API 密钥的 .env 文件提交到版本控制
# 2. 在生产环境中使用强随机的 AUTH_SECRET
# 3. 使用 HTTPS 确保数据传输安全
# 4. 定期轮换 API 密钥
# 5. 仅为应用程序分配必需的权限
# =============================================================================